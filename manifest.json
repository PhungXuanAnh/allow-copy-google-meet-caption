{
  "manifest_version": 3,
  "name": "Google Meet Caption Copy & Google Docs Tab Style",
  "version": "1.1",
  "description": "Enable copying text from Google Meet captions and enhance Google Docs document tabs styling",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://docs.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*", "https://docs.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "allow-copy-caption-in-google-meet/script.js",
        "change-style-of-document-tabs/script.js"
      ],
      "matches": [
        "https://meet.google.com/*",
        "https://docs.google.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Google Meet Caption Copy & Google Docs Tab Style"
  }
}